    script.
        $(document).ready(function () {
            $(window).bind('scroll', function () {
                if ($(window).scrollTop() > 350) {
                    
                    $('.header-bottom').fadeIn(200);
                    $('.header-bottom-static').fadeOut(200);
                    $('#nav-bar-wayra').removeClass("nav-is-visible");

                } else {
                    $('.header-bottom').fadeOut(200);
                    $('.header-bottom-static').fadeIn(200);
                     $('#nav-bar-wayra').addClass("nav-is-visible");
                }
            });
        });